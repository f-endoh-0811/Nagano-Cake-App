<div class="container">
  <div class="row">
    <div class="col-lg-3 mb-3">
      <h3>会員一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <a href="/admin/customers/<%= customer.id %>" class="text-dark">
                <%= customer.last_name %>
                <%= customer.first_name %>
              </a>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <%= customer.is_deleted ? '退会' : '有効' %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-lg-12 text-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>