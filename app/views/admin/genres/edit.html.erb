<div class="container">
  <div class="row">
    <div class="col-lg-4 mb-3">
      <h3>ジャンル編集</h3>
    </div>
  </div>
      
  <div class="row">
    <div class="col-lg-7">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <div class="field">
          <tr>
            <th>
              <label for="inputGenre">ジャンル名</label>
            </th>
            <td>
              <%= f.text_field :name, autofocas: true, id: "inputGenre" %>
            </td>
            <td>
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </td>
          </tr>
        </div>
      </table>
      <% end %>
    </div>
  </div>
</div>