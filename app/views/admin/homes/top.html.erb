<div class="container">
  <div class="row">
    <div class="col-lg-5 mb-3">
      <h3>注文履歴一覧</h3>
    </div>
  </div>

  <% if @orders.count == 0 %>
    <div class="row mt-5">
      <div class="col-lg-12 text-center">
        <h5>注文履歴はありません。</h5>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-lg-12">
        <table class="table border-bottom">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <a href="/admin/orders/<%= order.id %>" class="text-dark" style="text-decoration: underline;"><%=  l order.created_at %></a>
                </td>

                <td>
                  <%= order.customer.last_name %><!--
               --><%= order.customer.first_name %>
                </td>

                <td>

                  <%= order.total_amount_method %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row mt">
      <div class="col-lg-12 text-center">
        <%= paginate @orders %>
      </div>
    </div>
  <% end %>
</div>