<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <h2>注文履歴一覧</h2>
    </div>
  </div>
  
  <% if @orders.count == 0 %>
    <div class="row mt-5">
      <div class="col-lg-12 text-center">
        <h5>注文履歴はありません。</h5>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-lg-12">
        <table>
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
            </tr>
          </thead>
          
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= order.created_at %>
                </td>
                
                <td>
                  <%= order.name %>
                </td>
                
                <td>
                  <%= order.order_details.amount %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-12">
        <%= paginate @orders %>
      </div>
    </div>
  <% end %>
</div>