<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <h2>注文履歴一覧</h2>
    </div>
  </div>

  <% if @orders.count == 0 %>
    <div class="row mt-5">
      <div class="col-lg-12 text-center">
        <h5>注文履歴はありません。</h5>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-bordered border-dark">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= order.created_at %> <!-- 日付の表示方法を変更、注文履歴詳細ページへのリンクを記述 -->
                </td>

                <td>
                  <%= order.customer.last_name %><!--
               --><%= order.customer.first_name %>
                </td>

                <td>

                  <%= order.total_amount_method %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row mt">
      <div class="col-lg-12 text-center">
        <%= paginate @orders %>
      </div>
    </div>
  <% end %>
</div>