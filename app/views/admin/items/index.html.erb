<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品一覧</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item.name, admin_item_path(item.id) %>
            </td>
            <td>
              <%= item.price %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <%= item.status ? '販売中' : '販売停止中' %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>