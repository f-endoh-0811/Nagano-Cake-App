<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <h2>商品一覧</h2>
    </div>
    <div class="col-lg-1">
      <%= link_to "+", new_admin_item_path, class: "btn btn-light" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-bordered border-dark">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item.name, admin_item_path(item.id) %>
            </td>
            <td>
              <%= item.price.to_s(:delimited) %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <%= item.status ? '販売中' : '販売停止中' %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-lg-12 text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>