<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <h2>商品新規登録</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-12">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>商品画像</th>
          <td>
            <%= f.file_field :image, accept: "image/*" %>
          </td>
        </tr>
        
        <tr>
          <th>商品名</th>
          <td>
            <%= f.text_field :name, placeholder: "商品名" %>
          </td>
        </tr>
        
        <tr>
          <th>商品説明</th>
          <td>
            <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
          </td>
        </tr>
        
        <tr>
          <th>ジャンル</th>
          <td>
            <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください--"}) %>
          </td>
        </tr>
        
        <tr>
          <th>税抜価格</th>
          <td>
            <%= f.number_field :price, placeholder: "1000"%>円
          </td>
        </tr>
        
        <tr>
          <th>販売ステータス</th>
          <td>
            <%= f.radio_button :status, "TRUE", checked: true %>
            <%= f.label :status, "販売中" %>
            <%= f.radio_button :status, "FALSE" %>
            <%= f.label :status, "売切れ" %>
          </td>
        </tr>
      </table>
        <div class="button">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>