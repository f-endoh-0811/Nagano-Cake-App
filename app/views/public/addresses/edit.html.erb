<div class="container">
  <div class="row">
    <div class="col">
      <h2>配送先編集</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
      <table>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td>
            <%= f.text_field :postal_code %>
          </td>
        </tr>
        
        <tr>
          <th>住所</th>
          <td>
            <%= f.text_field :address %>
          </td>
        </tr>
        
        <tr>
          <th>宛名</th>
          <td>
            <%= f.text_field :name %>
          </td>
          <td>
            <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>