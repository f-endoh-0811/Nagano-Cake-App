<div class="container">
  <div class="row mb-3">
    <div class="col-lg-4">
      <h3>配送先編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
      <table>
        <tr>
          <th>郵便番号(ハイフンなし)　</th>
          <td>
            <%= f.text_field :postal_code %>
          </td>
        </tr>

        <tr>
          <th>住所　</th>
          <td>
            <%= f.text_field :address, size: "60%" %>
          </td>
        </tr>

        <tr>
          <th>宛名　</th>
          <td>
            <%= f.text_field :name %>
          </td>
          <td>
            　　　<%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>