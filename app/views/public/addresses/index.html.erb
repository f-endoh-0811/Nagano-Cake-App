<div class="container">
  <div class="row">
    <div class="col">
      <h2>配送先登録 / 一覧</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
      <table>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td>
            <%= f.text_field :postal_code %>
          </td>
        </tr>
        
        <tr>
          <th>住所</th>
          <td>
            <%= f.text_field :address %>
          </td>
        </tr>
        
        <tr>
          <th>宛名</th>
          <td>
            <%= f.text_field :name %>
          </td>
          <td>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table class="table border border-dark">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
        <% @addresses.each do |address| %>
          <% if address.customer_id == current_customer.id %>
            <tr>
              <td>
                <%= address.postal_code %>
              </td>
              <td>
                <%= address.address %>
              </td>
              <td>
                <%= address.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>