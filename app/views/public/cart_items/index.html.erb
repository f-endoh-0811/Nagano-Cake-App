<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-lg-2">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    </div>
  </div>
  
  <% if @cart_items.count == 0 %>
    <div class="row mt-5">
      <div class="col-lg-7 text-center">
        <h5>カートは空です</h5>
      </div>
      <div class="col-lg-5">
        <%= link_to "商品一覧へ", items_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-bordered border-dark">
          <thead>
            <tr>
              <th style="width: 40%;">商品名</th>
              <th style="width: 15%;">単価(税込)</th>
              <th style="width: 15%;">数量</th>
              <th style="width: 15%;">小計</th>
              <th style="width: 15%;"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @cart_items.each do |cart_item| %>
              
              <tr>
                <td>
                  <%= image_tag cart_item.item.get_image(80, 50) %>　
                  <%= cart_item.item.name %>
                </td>
                <td>
                  <%= cart_item.item.with_tax_price.to_s(:delimited) %>
                </td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                  <td class="text-center">
                    <%= f.select :amount, options_for_select(@numbers, {selected: cart_item.amount.to_i}) %>
                    <%= f.submit "変更", class: "btn btn-success" %>
                  </td>
                <% end %>
                <td>
                  <%= cart_item.subtotal.to_s(:delimited) %>
                </td>
                <td class="text-center">
                  <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  
    <div class="row">
      <div class="col-lg-9">
        <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
      </div>
      <div class="col-lg-3">
        <table class="table table-bordered border-dark">
          <tr>
            <th>合計金額</th>
            <td>
              <%= @total.to_s(:delimited) %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>