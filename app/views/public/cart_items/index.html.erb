<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-lg-2">
      <%= link_to "カートを空にする", root_path, class: "btn btn-danger" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered border-dark">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image(120, 50) %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.with_tax_price %>
            </td>
            <td>
              <!--数量変更-->
              <!--変更ボタン-->
            </td>
            <td>
              <%= cart_item.subtotal %>
            </td>
            <th>
              <!--削除ボタン-->
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-9">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    </div>
    <div class="col-lg-3">
      <table class="table table-bordered border-dark">
        <tr>
          <th>合計金額</th>
          <td>
            <%= @total.to_s(:delemited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-12 text-center">
      <%= link_to "情報入力に進む", root_path, class: "btn btn-success" %>
    </div>
  </div>
</div>