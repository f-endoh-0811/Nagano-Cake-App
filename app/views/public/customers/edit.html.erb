<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
<div>
  <table>
    <tr>
      <th>
        <label for="inputLastName, inputFirstName">氏名</label>
      </th>
      <td>
        <%= f.text_field :last_name, autofocus: true, id: "inputLastName" %>　
        <%= f.text_field :first_name, id: "inputFirstName" %>
      </td>
    </tr>
    
    <tr>
      <th>
        <label for="inputLastNameKana, inputFirstNameKana">フリガナ</label>
      </th>
      <td>
        <%= f.text_field :last_name_kana, autofocus: true, id: "inputLastNameKana" %>　
        <%= f.text_field :first_name_kana, id: "inputFirstNameKana" %>
      </td>
    </tr>
    
    <tr>
      <th>
        <label for="inputPostalCode">郵便番号</label>
      </th>
      <td>
        <%= f.text_field :postal_code, id: "inputPostalCode" %>
      </td>
    </tr>
    
    <tr>
      <th>
        <label for="inputAdress">住所</label>
      </th>
      <td>
        <%= f.text_field :address, id: "inputAdress" %>
      </td>
    </tr>
    
    <tr>
      <th>
        <label for="inputTelephoneNumber">電話番号</label>
      </th>
      <td>
        <%= f.text_field :telephone_number, id: "inputTelephoneNumber" %>
      </td>
    </tr>
    
    <tr>
      <th>
        <label for="inputMail">メールアドレス</label>
      </th>
      <td>
        <%= f.text_field :email, id: "inputMail" %>
      </td>
    </tr>
    
    <tr>
      <th></th>
      <td>
        <%= f.submit "編集内容を保存" %>
      </td>
    </tr>
  </table>
</div>
<% end %>