<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= image_tag @item.get_image(350, 230) %>
    </div>
    <div class="col-lg-6">
      <div>
        <h4>
          <%= @item.name %>
        </h4>
        <p>
          <%= @item.introduction %>
        </p>
        <h6>
          ¥ <%= @item.with_tax_price %><span> (税込)</span> 
        </h6>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "カートに入れる", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>