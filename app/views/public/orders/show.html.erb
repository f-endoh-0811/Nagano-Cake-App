<div class="container">
  <div class="row mb-3">
    <div class="col-lg-5">
      <h3>注文履歴詳細</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-7">
      <h5>注文情報</h5>
      <table class="table table-bordered border_dark">
        <tr>
          <th style="width: 20%;">注文日</th>
          <td>
            <%= l @order.created_at, format: :short %>
          </td>
        </tr>

        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>

        <tr>
          <th>支払方法</th>
          <td>
            <%= @order.payment_method_i18n %>
          </td>
        </tr>
      </table>
    </div>

    <div class="col-lg-4">
      <h5>請求情報</h5>
      <table class="table table-bordered border_dark">
        <tr>
          <th>商品合計</th>
          <td>
            <%= @total.to_s(:delimited) %>
          </td>
        </tr>

        <tr>
          <th>配送料</th>
          <td>
            <%= @order.postage %>
          </td>
        </tr>

        <tr>
          <th>ご請求額</th>
          <td>
            <%= @order.billing_amount.to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-9">
      <h5>注文内容</h5>
      <table class="table table-bordered border_dark">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.item.name %>
              </td>

              <td>
                <%= order_detail.price %>
              </td>

              <td>
                <%= order_detail.amount %>
              </td>

              <td>
                <%= order_detail.subtotal %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>